<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dora:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ivDora1"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivDora1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uradora:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ivUradora1"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivUradora1" />

    <ImageView
        android:id="@+id/ivUradora1"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivUradora2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/ivDora1"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivUradora2"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivUradora3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivUradora1"
        app:layout_constraintTop_toTopOf="@+id/ivUradora1"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivUradora3"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivUradora4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivUradora2"
        app:layout_constraintTop_toTopOf="@+id/ivUradora2"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivUradora4"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivUradora5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivUradora3"
        app:layout_constraintTop_toTopOf="@+id/ivUradora3"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivUradora5"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivUradora4"
        app:layout_constraintTop_toTopOf="@+id/ivUradora4"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivDora1"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/highlight"
        app:layout_constraintEnd_toStartOf="@+id/ivDora2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivDora2"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/highlight"
        app:layout_constraintEnd_toStartOf="@+id/ivDora3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivDora1"
        app:layout_constraintTop_toTopOf="@+id/ivDora1"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivDora3"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/highlight"
        app:layout_constraintEnd_toStartOf="@+id/ivDora4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivDora2"
        app:layout_constraintTop_toTopOf="@+id/ivDora2"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivDora4"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/highlight"
        app:layout_constraintEnd_toStartOf="@+id/ivDora5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivDora3"
        app:layout_constraintTop_toTopOf="@+id/ivDora3"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivDora5"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/highlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivDora4"
        app:layout_constraintTop_toTopOf="@+id/ivDora4"
        app:srcCompat="@drawable/blank" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/doraGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="ivDora1,ivDora2,ivDora3,ivDora4,ivDora5" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/uradoraGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="ivUradora1,ivUradora2,ivUradora3,ivUradora4,ivUradora5" />

</androidx.constraintlayout.widget.ConstraintLayout>