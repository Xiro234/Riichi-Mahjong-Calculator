<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivHand3"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivHand4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivHand2"
        app:layout_constraintTop_toTopOf="@+id/ivHand2"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivHand1"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivHand2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivSeatWind1"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivSeatWind2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/ivHand1"
        app:srcCompat="@drawable/ton" />

    <ImageView
        android:id="@+id/ivPrevalentWind1"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivPrevalentWind2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/ivSeatWind1"
        app:srcCompat="@drawable/ton" />

    <ImageView
        android:id="@+id/ivPrevalentWind2"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivPrevalentWind3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivPrevalentWind1"
        app:layout_constraintTop_toTopOf="@+id/ivPrevalentWind1"
        app:srcCompat="@drawable/nan" />

    <ImageView
        android:id="@+id/ivPrevalentWind3"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivPrevalentWind4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivPrevalentWind2"
        app:layout_constraintTop_toTopOf="@+id/ivPrevalentWind2"
        app:srcCompat="@drawable/shaa" />

    <ImageView
        android:id="@+id/ivPrevalentWind4"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivPrevalentWind3"
        app:layout_constraintTop_toTopOf="@+id/ivPrevalentWind3"
        app:srcCompat="@drawable/pei" />

    <ImageView
        android:id="@+id/ivSeatWind2"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivSeatWind3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivSeatWind1"
        app:layout_constraintTop_toTopOf="@+id/ivSeatWind1"
        app:srcCompat="@drawable/nan" />

    <ImageView
        android:id="@+id/ivSeatWind3"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivSeatWind4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivSeatWind2"
        app:layout_constraintTop_toTopOf="@+id/ivSeatWind2"
        app:srcCompat="@drawable/shaa" />

    <ImageView
        android:id="@+id/ivSeatWind4"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivSeatWind3"
        app:layout_constraintTop_toTopOf="@+id/ivSeatWind3"
        app:srcCompat="@drawable/pei" />

    <ImageView
        android:id="@+id/ivHand4"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivHand5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivHand3"
        app:layout_constraintTop_toTopOf="@+id/ivHand3"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivHand5"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivHand4"
        app:layout_constraintTop_toTopOf="@+id/ivHand4"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/ivHand2"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:background="@drawable/front"
        app:layout_constraintEnd_toStartOf="@+id/ivHand3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivHand1"
        app:layout_constraintTop_toTopOf="@+id/ivHand1"
        app:srcCompat="@drawable/blank" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/HandGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="ivHand3,ivHand2,ivHand1,ivHand5,ivHand4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.32" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Riichi?"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/checkBox7" />

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Rinshankaiho?"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/checkBox5"
        app:layout_constraintTop_toTopOf="@+id/checkBox5" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Chankan?"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/checkBox4" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Double?"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/checkBox"
        app:layout_constraintTop_toTopOf="@+id/checkBox" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Ippatsu?"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Tsumo?"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="First round?"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/ivPrevalentWind1" />

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Houtei?"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/checkBox7"
        app:layout_constraintTop_toTopOf="@+id/checkBox7" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Dora:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ivHand1"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivHand1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Seat Wind:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ivSeatWind1"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivSeatWind1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Round Wind:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ivPrevalentWind1"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivPrevalentWind1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round Conditions:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox7"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkBox7" />

</androidx.constraintlayout.widget.ConstraintLayout>